    "cors": "^2.8.5",
    "cpr": "^3.0.1",
    "css-loader": "^3.2.0",
    "del-cli": "^2.0.0",
    "express": "^4.17.1",
    "graphql": "^14.5.6",
    "html-webpack-plugin": "^3.2.0",
    "i18next": "^17.0.12",
    "i18next-browser-languagedetector": "^3.0.3",
    "i18next-xhr-backend": "^3.1.2",
