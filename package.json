    "numeral": "^2.0.6",
    "phin": "^3.4.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-i18next": "^10.12.2",
    "react-router-dom": "^5.1.2",
    "serve-handler": "^6.1.1",
    "serverless": "^1.50.0",
    "serverless-finch": "^2.4.2",
