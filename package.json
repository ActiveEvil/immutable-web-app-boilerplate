  "name": "immutable-web-app-boilerplate",
  "version": "0.0.0",
  "author": "Active Evil",
  "license": "MIT",
  "private": true,
  "scripts": {
    "setup": "bash ./scripts/setup.sh",
    "start": "bash ./scripts/start.sh",
    "lint:client": "tslint --fix --project tsconfig.client.json --format verbose",
    "lint:infrastructure": "tslint --fix --project tsconfig.json --format verbose",
    "test": "jest --coverage --verbose",
    "build": "webpack --mode production --config ./webpack/client.config.js",
    "deploy:assets": "./scripts/deployAssets.sh",
    "deploy:lambda": "./scripts/deployLambda.sh",
    "i18n": "bash ./scripts/generateTranslationFiles.sh",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "accept-language": "^3.0.18",
    "aws-sdk": "^2.514.0",
    "cookie": "^0.4.0",
    "mustache": "^3.0.1"
