    "@types/aws-lambda": "^8.10.31",
    "@types/aws-sdk": "^2.7.0",
    "@types/cookie": "^0.3.3",
    "@types/cors": "^2.8.6",
    "@types/jest": "^24.0.17",
    "@types/mustache": "^0.8.32",
    "@types/node": "^12.7.2",
    "@types/node-fetch": "^2.5.1",
