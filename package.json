  "jest": {
    "preset": "ts-jest",
    "globals": {
      "window": {}
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ]
  }
}
